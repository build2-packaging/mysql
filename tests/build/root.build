# It would be good to make sure that libmysqlclient headers comply with an
# oldest C standard, but that's not the case (C++-style comments are used).
#
c.std = 99

using c

h{*}: extension = h
c{*}: extension = c

if ($c.class == 'msvc')
{
  c.poptions += -D_CRT_SECURE_NO_WARNINGS -D_SCL_SECURE_NO_WARNINGS
  c.coptions += /wd4251 /wd4275 /wd4800
}

# Every exe{} in this subproject is by default a test.
#
exe{*}: test = true

# Specify the test target for cross-testing.
#
test.target = $c.target
